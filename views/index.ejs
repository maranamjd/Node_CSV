<div class="row" id="login">
  <div class="col-md-offset-3 col-md-5 col-sm-offset-3 col-sm-6 col-xs-offset-1 col-xs-10">
    <div class="well">
      <form action="/login" method="post">
        <div class="form-group">
            <label for="#username">Username: </label>
            <input type="text" name="username" placeholder="input username" class="form-control" id="username" required>
        </div>
        <div class="form-group">
            <label for="#password">Password: </label>
            <input type="password" name="password" placeholder="input password" class="form-control" id="password" required>
        </div>
          <div class="form-group">
              <input type="submit" name="submit" value="submit" class="btn" id="submit">
          </div>
      </form>
    </div>
  </div>
  <div class="col-md-offset-1 col-md-3 col-sm-offset-4 col-sm-5 col-xs-offset-1 col-xs-10">
    <% if(locals.notif){ %>
      <% if(notif === 1){ %>
        <div class="alert alert-danger btn" id="alert" data-dismiss="alert" data-target="#alert" title="click to dismiss..">
          Username or password do not match!
        </div>
      <% } %>
      <% if(notif === 2){ %>
        <div class="alert alert-success btn" id="alert" data-dismiss="alert" data-target="#alert" title="click to dismiss..">
          Message Sent!
        </div>
      <% } %>
    <% } %>
  </div>
</div>
